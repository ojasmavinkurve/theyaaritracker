    <label for="driver" class="register-switch-label">Driver</label>
  </div>
  <input name="username" type="text" class="register-input" placeholder="username" required>
  <input name="email" type="email" class="register-input" placeholder="Email address" required>
  <input name="password" type="password" class="register-input" placeholder="Password">
